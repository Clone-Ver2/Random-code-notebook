conky fragments for linux

Gits version


conky -c ~/.conkyrc_gits




conky.config = {
    background = true,
    update_interval = 1,
    double_buffer = true,
    no_buffers = true,
    text_buffer_size = 2048,
    override_utf8_locale = true,

    alignment = 'top_left',
    gap_x = 20,
    gap_y = 40,
    minimum_width = 300, minimum_height = 0,

    own_window = true,
    own_window_type = 'desktop',
    own_window_transparent = true,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

    draw_shades = false,
    draw_outline = false,
    draw_borders = false,
    draw_graph_borders = true,

    use_xft = true,
    font = 'Fira Mono:size=9',
    default_color = '00FF00',
};

conky.text = [[
${font Fira Mono:bold:size=10}${color}${time %A, %d %B %Y}
${font Fira Mono:size=9}${color}Time: ${time %H:%M:%S}
ã‚·ã‚¹ãƒ†ãƒ ãƒ¢ãƒ‹ã‚¿ãƒ¼: GHOST_UI v1.3

Uptime: ${uptime}
CPU: ${cpu}% ${cpubar 8}
RAM: ${mem}/${memmax} ${membar 8}
Load: ${loadavg}
Disk: ${fs_used /} / ${fs_size /} ${fs_bar 8 /}
Net: â†“ ${downspeedf wlan0} â†‘ ${upspeedf wlan0}
Public IP: ${execi 300 curl -s ifconfig.me}
Battery: ${battery_percent BAT0}% ${battery_bar 8 BAT0}
]];








Nerv/Evangelion


conky -c ~/.conkyrc_nerv



conky.config = {
    background = true,
    update_interval = 1,
    double_buffer = true,
    no_buffers = true,
    text_buffer_size = 2048,
    override_utf8_locale = true,

    alignment = 'top_right',
    gap_x = 20,
    gap_y = 40,
    minimum_width = 300, minimum_height = 0,

    own_window = true,
    own_window_type = 'desktop',
    own_window_transparent = true,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

    draw_shades = false,
    draw_outline = false,
    draw_borders = false,
    draw_graph_borders = true,

    use_xft = true,
    font = 'JetBrains Mono:size=9',
    default_color = 'FF3CAC',
};

conky.text = [[
${font JetBrains Mono:bold:size=10}${color}${time %A, %d %B %Y}
ã‚·ã‚¹ãƒ†ãƒ ãƒ¢ãƒ‹ã‚¿ãƒ¼ / NERV-UI.v2

[ STATUS MONITOR ]
TIME: ${time %H:%M:%S}
UPTIME: ${uptime}

[ SYSTEM LOAD ]
CPU: ${cpu}% ${cpubar 10}
MEM: ${mem} / ${memmax} ${membar 10}
LOAD AVG: ${loadavg}
DISK /: ${fs_used /} / ${fs_size /} ${fs_bar 10 /}

[ NETWORK ]
SSID: ${wireless_essid wlan0}
IP: ${addr wlan0}
EXT IP: ${execi 300 curl -s ifconfig.me}
NET â†“ ${downspeedf wlan0} â†‘ ${upspeedf wlan0}

[ POWER ]
BATTERY: ${battery_percent BAT0}% ${battery_bar 10 BAT0}
]];




RavencoreV1



conky.config = {
    background = true,
    update_interval = 1,
